//-------------------------
// Enums
//-------------------------

type t_enum enum { X, Y, Z };

//-------------------------
// Unions
//-------------------------

type t_union_refs union {
    var_1: t_bool,
    var_2: t_array_prim_var,
    var_3: t_enum,
    var_4: t_struct,
};

type t_union union {
    var_1: bool,                    // primitive
    var_2: bool[],                  // array
    var_3: enum { A, B, C },        // enum
    var_4: struct { x: bool, y: bool },      // struct
    var_5: union {                  // union of union
        var_a: bool,
        var_b: bool[],
        var_c: enum { A, B, C },
        var_d: struct { x: bool, y: bool },
        var_e: union {
            i: t_i32,
            f: t_f64,
        },
    },
};

