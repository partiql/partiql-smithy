//-------------------------
// Primitives
//-------------------------
type t_bool bool;
type t_i32 int32;
type t_i64 int64;
type t_f32 float32;
type t_f64 float64;
type t_str string;
type t_byte byte;
type t_bytes bytes;

//-------------------------
// Arrays
//-------------------------
type t_array_prim_var bool[];
type t_array_prim_fix bool[10];
type t_array_var t_bool[];
type t_array_fix t_bool[10];

//-------------------------
// Structs
//-------------------------

type t_struct_prim struct {
    x: int32,
    y: int64,
};

type t_struct struct {
    x: t_i32,
    y: t_i64,
};

