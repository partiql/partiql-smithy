private fun IonReader.checkedInt(): Int {
    val l = longValue()
    if (l < Int.MIN_VALUE || l > Int.MAX_VALUE) {
        throw IllegalArgumentException("Value $l is out of range for Int")
    }
    return l.toInt()
}

private fun IonReader.checkedFloat(): Float {
    val d = doubleValue()
    if (d < Float.MIN_VALUE || d > Float.MAX_VALUE) {
        throw IllegalArgumentException("Value $d is out of range for Float")
    }
    return d.toFloat()
}

private fun IonReader.checkedBoolean(): Boolean {
    val t = booleanValue()
    if (t == null) {
        throw IllegalArgumentException("Value is not a boolean")
    }
    return t
}

private fun IonReader.checkedLong(): Long {
    val l = longValue()
    if (l == null) {
        throw IllegalArgumentException("Value is not a long")
    }
    return l
}
